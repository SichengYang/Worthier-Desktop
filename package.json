{
  "name": "worthier-desktop",
  "version": "1.0.0",
  "description": "Worthier Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "(pkill -f \"electron\" 2>/dev/null || true) && npm run build:react && electron-forge start",
    "build:react": "node build.js react",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "node build.js"
  },
  "build": {
    "appId": "com.worthier.app",
    "productName": "Worthier Desktop",
    "icon": "icon.png",
    "mac": {
      "identity": null
    },
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SichengYang/Worthier-Desktop.git"
  },
  "keywords": [
    "Electron"
  ],
  "author": "Sicheng Yang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SichengYang/Worthier-Desktop/issues"
  },
  "homepage": "https://github.com/SichengYang/Worthier-Desktop#readme",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bootstrap-icons": "^1.13.1",
    "chart.js": "^4.5.0",
    "electron-squirrel-startup": "^1.0.1",
    "getmac": "^6.6.0",
    "keytar": "^7.9.0"
  }
}
