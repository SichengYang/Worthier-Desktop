{
  "name": "worthier-desktop",
  "version": "1.0.0",
  "description": "Worthier Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "(pkill -f \"electron\" 2>/dev/null || true) && npm run build:react && electron .",
    "build:react": "node build.js react",
    "build": "node build.js",
    "build:mac": "npm run build:react && source .env && CSC_NAME=\"$DEVELOPER_ID_CSC_NAME\" npx electron-builder --mac",
    "build:mac:notarized": "npm run build:react && source .env && APPLE_API_KEY=\"$APPLE_API_KEY\" APPLE_API_KEY_ID=\"$APPLE_API_KEY_ID\" APPLE_API_ISSUER=\"$APPLE_API_ISSUER\" APPLE_TEAM_ID=\"$APPLE_TEAM_ID\" CSC_NAME=\"$DEVELOPER_ID_CSC_NAME\" npx electron-builder --mac --config.mac.notarize=true",
    "build:mas": "npm run build:react && source .env && CSC_NAME=\"$APPLE_DISTRIBUTION_CSC_NAME\" npx electron-builder --mac mas",
    "build:mas:dev": "npm run build:react && source .env && CSC_NAME=\"$APPLE_DEVELOPMENT_CSC_NAME\" npx electron-builder --mac mas-dev",
    "build:win": "npm run build:react && electron-builder --win",
    "dist": "npm run build:react && electron-builder"
  },
  "build": {
    "appId": "com.worthier.app",
    "productName": "Worthier Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!react/src/**/*",
      "!react/public/**/*",
      "!notification-react/src/**/*",
      "!rest-react/src/**/*",
      "react/dist/**/*",
      "notification-react/dist/**/*",
      "rest-react/dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": true,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "notarize": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "mas": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "entitlements": "entitlements.mas.plist",
      "entitlementsInherit": "entitlements.mas.inherit.plist",
      "provisioningProfile": false,
      "target": [
        {
          "target": "mas",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "masDev": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "entitlements": "entitlements.mas.inherit.plist",
      "entitlementsInherit": "entitlements.mas.inherit.plist",
      "provisioningProfile": false,
      "target": [
        {
          "target": "mas-dev",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SichengYang/Worthier-Desktop.git"
  },
  "keywords": [
    "Electron"
  ],
  "author": "Sicheng Yang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SichengYang/Worthier-Desktop/issues"
  },
  "homepage": "https://github.com/SichengYang/Worthier-Desktop#readme",
  "devDependencies": {
    "@electron/notarize": "^3.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.1",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bootstrap-icons": "^1.13.1",
    "chart.js": "^4.5.0",
    "electron-squirrel-startup": "^1.0.1",
    "getmac": "^6.6.0",
    "keytar": "^7.9.0"
  }
}
