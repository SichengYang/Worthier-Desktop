{
  "name": "worthier-desktop",
  "version": "1.0.0",
  "description": "Worthier Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "(pkill -f \"electron\" 2>/dev/null || true) && npm run build:react && electron .",
    "build:react": "node build.js react",
    "build:webpack": "webpack --config webpack.config.js",
    "build": "node build.js",
    "build:x64": "node build.js --x64",
    "build:arm64": "node build.js --arm64",
    "build:x64:signed": "node build.js --x64 --signed",
    "build:arm64:signed": "node build.js --arm64 --signed",
    "build:x64:notarized": "node build.js --x64 --notarized",
    "build:arm64:notarized": "node build.js --arm64 --notarized",
    "build:signed": "node build.js --signed",
    "build:notarized": "node build.js --notarized"
  },
  "build": {
    "appId": "com.worthier.app",
    "productName": "Worthier Desktop",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "compression": "maximum",
    "files": [
      "**/*",
      "!react/src/**/*",
      "!react/public/**/*",
      "!react/node_modules/**/*",
      "!notification-react/src/**/*",
      "!notification-react/node_modules/**/*", 
      "!rest-react/src/**/*",
      "!rest-react/node_modules/**/*",
      "!**/node_modules/**/*",
      "!**/.git/**/*",
      "!**/.DS_Store",
      "!**/*.map",
      "react/dist/**/*",
      "notification-react/dist/**/*",
      "rest-react/dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": true,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "notarize": false,
      "minimumSystemVersion": "11.0",
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "JSON Data",
            "CFBundleTypeExtensions": ["json"],
            "CFBundleTypeIconFile": "icon.icns",
            "CFBundleTypeRole": "Editor",
            "LSHandlerRank": "Alternate",
            "CFBundleTypeMIMETypes": ["application/json"]
          },
          {
            "CFBundleTypeName": "Text Files",
            "CFBundleTypeExtensions": ["txt", "log", "csv"],
            "CFBundleTypeIconFile": "icon.icns",
            "CFBundleTypeRole": "Editor", 
            "LSHandlerRank": "Alternate",
            "CFBundleTypeMIMETypes": ["text/plain"]
          },
          {
            "CFBundleTypeName": "Image Files",
            "CFBundleTypeExtensions": ["png", "jpg", "jpeg"],
            "CFBundleTypeIconFile": "icon.icns",
            "CFBundleTypeRole": "Viewer",
            "LSHandlerRank": "None",
            "CFBundleTypeMIMETypes": ["image/png", "image/jpeg"]
          },
          {
            "CFBundleTypeName": "All Files",
            "CFBundleTypeOSTypes": ["****"],
            "CFBundleTypeRole": "Editor",
            "LSHandlerRank": "None"
          }
        ],
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "Worthier Protocol",
            "CFBundleURLSchemes": ["worthier"]
          }
        ],
        "LSMinimumSystemVersion": "11.0",
        "NSAppleEventsUsageDescription": "This app needs to control other applications to detect meetings and fullscreen mode.",
        "NSDesktopFolderUsageDescription": "Access to Desktop folder for saving exported files.",
        "NSDocumentsFolderUsageDescription": "Access to Documents folder for saving exported files.",
        "NSDownloadsFolderUsageDescription": "Access to Downloads folder for saving exported files."
      },
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "mas": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "entitlements": "entitlements.mas.plist",
      "entitlementsInherit": "entitlements.mas.inherit.plist",
      "provisioningProfile": false,
      "target": [
        {
          "target": "mas",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "masDev": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "entitlements": "entitlements.mas.inherit.plist",
      "entitlementsInherit": "entitlements.mas.inherit.plist",
      "provisioningProfile": false,
      "target": [
        {
          "target": "mas-dev",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SichengYang/Worthier-Desktop.git"
  },
  "keywords": [
    "Electron"
  ],
  "author": "Sicheng Yang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SichengYang/Worthier-Desktop/issues"
  },
  "homepage": "https://github.com/SichengYang/Worthier-Desktop#readme",
  "devDependencies": {
    "@electron/notarize": "^3.0.2",
    "copy-webpack-plugin": "^13.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.1",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bootstrap-icons": "^1.13.1",
    "chart.js": "^4.5.0",
    "electron-squirrel-startup": "^1.0.1",
    "keytar": "^7.9.0"
  }
}
